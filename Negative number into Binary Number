#include<iostream>
#include<math.h>
using namespace std;
void toBinary(int number) {
    if (number == 0) {
        std::cout << "Binary representation: 0" << std::endl;
        return;
    }

    // Initialize a mask to extract the bits
    int mask = 1 << 31;

    std::cout << "Binary representation: ";

    for (int i = 0; i < 32; ++i) {
        if (number & mask)
            std::cout << "1";
        else
            std::cout << "0";

        number <<= 1;
    }

    std::cout << std::endl;
}

int main() {
    int number = -3;  // Replace this with your negative number
    toBinary(number);
    return 0;
}
